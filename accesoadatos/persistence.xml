<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                 http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="mantenimiento-persona">
        <provider>org.objectdb.jpa.Provider</provider>
        <class>com.example.Persona</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="objectdb://localhost:6136/mantenimiento-persona.odb"/>
            <property name="javax.persistence.jdbc.driver" value="org.objectdb.Driver"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <property name="javax.persistence.jdbc.password" value=""/>
        </properties>
    </persistence-unit>
</persistence>
